---
import FirstView from '../components/first-view/index.astro';
import Introduction from '../components/introduction/index.astro';
import Blog from '../components/blog/index.astro';
import Flow from '../components/flow/index.astro';
import Footer from '../components/footer';
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <section class="section">
    <FirstView />
    <div class="container">
      <Introduction />
      <Blog />
      <Flow />
    </div>
  </section>
  <Footer />
</Layout>

<style>
  .section {
    width: 100%;
    overflow: hidden;
    padding: 0;
    margin: 0 0 300px 0;
    background-color: #282828;
  }

  .container {
    max-width: 1024px;
    width: calc(100% - 40px);
    margin: 0 auto;
  }
</style>
